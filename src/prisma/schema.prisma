generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url = env("DATABASE_URL")
}

model User {
    id        String   @id @default(uuid())
    email     String   @unique
    password  String?
    verified  Boolean  @default(false)
    createdAt DateTime @default(now())

    tenants   TenantUser[]
    oauth     OAuthAccount[]
    refreshTokens RefreshToken[]
}

model Tenant {
    id            String   @id @default(uuid())
    name          String
    slug          String   @unique
    logoUrl       String?
    primaryColor  String?
    domain        String?
    createdAt     DateTime @default(now())

    users         TenantUser[]
}

model TenantUser {
    id       String @id @default(uuid())
    userId   String
    tenantId String
    role     Role

    user     User   @relation(fields: [userId], references: [id])
    tenant   Tenant @relation(fields: [tenantId], references: [id])

    @@unique([userId, tenantId])
}

model RefreshToken {
    id        String   @id @default(uuid())
    userId    String
    tenantId  String
    tokenHash String
    revoked   Boolean  @default(false)
    expiresAt DateTime

    user      User     @relation(fields: [userId], references: [id])
}

enum Role {
    ADMIN
    USER
}

model OAuthAccount {
    id             String        @id @default(uuid())
    userId         String
    provider       OAuthProvider
    providerUserId String
    createdAt      DateTime      @default(now())

    user           User          @relation(fields: [userId], references: [id])

    @@unique([provider, providerUserId])
}

enum OAuthProvider {
    GOOGLE
    GITHUB
}

model Session {
    id              String   @d  @default(uuid())
    refreshToken    String   @unique
    userId          String
    tenantId        String
    revoked         Boolean  @default(false)
    expiresAt       DateTime
    createdAt       DateTime @default(now())
}

model Role {
    id   String @id  @default(uuid())
    name  String
    tenantId String

    users   userRole []  @@unique([name, tenantId])
 }


 model Permission {
    id  String @id @default(uuid())
    name String @unique
 }

 model UserRole{
    userId String
    roleId String

    user User @relation(fields: [userId], references: [id])
    role Role @relation(fields: [roleId], references: [id])


    @@id([userId, roleId])
 }
